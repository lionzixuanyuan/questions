/** * html5doctor.com Reset Stylesheet v1.6.1 (http://html5doctor.com/html-5-reset-stylesheet/) * Richard Clark (http://richclarkdesign.com) * http://cssreset.com */
html,
body,
div,
span,
object,
iframe,
h1,
h2,
h3,
h4,
h5,
h6,
p,
blockquote,
pre,
abbr,
address,
cite,
code,
del,
dfn,
em,
img,
ins,
kbd,
q,
samp,
small,
strong,
sub,
sup,
var,
b,
i,
dl,
dt,
dd,
ol,
ul,
li,
fieldset,
form,
label,
legend,
table,
caption,
tbody,
tfoot,
thead,
tr,
th,
td,
article,
aside,
canvas,
details,
figcaption,
figure,
footer,
header,
hgroup,
menu,
nav,
section,
summary,
time,
mark,
audio,
video {
  margin: 0;
  padding: 0;
  border: 0;
  outline: 0;
  font-size: 100%;
  vertical-align: baseline;
  background: transparent;
}
body {
  line-height: 1;
}
article,
aside,
details,
figcaption,
figure,
footer,
header,
hgroup,
menu,
nav,
section {
  display: block;
}
nav ul {
  list-style: none;
}
blockquote,
q {
  quotes: none;
}
blockquote:before,
blockquote:after,
q:before,
q:after {
  content: '';
  content: none;
}
a {
  margin: 0;
  padding: 0;
  font-size: 100%;
  vertical-align: baseline;
  background: transparent;
}
/* change colours to suit your needs */
ins {
  background-color: #ff9;
  color: #000;
  text-decoration: none;
}
/* change colours to suit your needs */
mark {
  background-color: #ff9;
  color: #000;
  font-style: italic;
  font-weight: bold;
}
del {
  text-decoration: line-through;
}
abbr[title],
dfn[title] {
  border-bottom: 1px dotted;
  cursor: help;
}
table {
  border-collapse: collapse;
  border-spacing: 0;
}
/* change border colour to suit your needs */
hr {
  display: block;
  height: 1px;
  border: 0;
  border-top: 1px solid #cccccc;
  margin: 1em 0;
  padding: 0;
}
input,
select {
  vertical-align: middle;
}
body {
  width: 100%;
  font-family: "Microsoft YaHei", Helvetica, Arial, sans-serif;
  font-size: 16px;
  color: #323232;
}
a {
  text-decoration: none;
  color: #575eb5;
}
a:visited {
  color: #575eb5;
}
a:hover {
  text-decoration: none;
}
button,
input,
select,
textarea {
  font-size: 100%;
  margin: 0;
  padding: 0;
  outline: none;
  font-family: "Microsoft YaHei", Helvetica, Arial, sans-serif;
}
textarea,
input {
  resize: none;
  outline: none;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}
textarea {
  resize: none;
  -webkit-appearance: none;
}
ul,
ol {
  list-style: none;
}
em {
  font-style: normal;
}
h2 {
  font: bold 14px/25px "Microsoft YaHei";
  color: #999693;
  padding: 10px 0;
}
.hide {
  display: none !important;
}
.clearfix:after {
  display: block;
  clear: both;
  content: "";
  visibility: hidden;
  height: 0;
  font-size: 0px;
  line-height: 0px;
}
.clearfix {
  zoom: 1;
}
.float-left {
  float: left;
}
.float-right {
  float: right;
}
.float-none {
  float: none;
}
.text-align-center {
  text-align: center;
}
.text-align-left {
  text-align: left;
}
.text-align-right {
  text-align: right;
}
.relative {
  position: relative;
}
.absolute {
  position: absolute;
}
/*-------------end of css reset-----------------*/
.common-bg {
  background-color: #061c29;
}
.index-bg {
  background-color: #061c29;
  background-image: url("<%= asset_path 'assets/index-bg.jpg' %>");
  background-repeat: no-repeat;
  background-position: left top;
  background-size: 100% auto;
}
.map-bg {
  background-color: #e4007f;
}
.intro {
  width: 320px;
  margin: 0px auto;
}
.wrapper {
  min-width: 320px;
}
.wrapper .img-list {
  font-size: 0px;
  line-height: 0px;
}
.wrapper .img-list img {
  width: 100%;
}
.nav-menus {
  padding: 28px 0px 10px 0px;
}
.nav-menus li {
  float: left;
  padding-left: 53px;
}
.nav-menus a {
  display: block;
  background-image: url("<%= asset_path 'assets/top-menus.png' %>");
  background-repeat: no-repeat;
  background-size: 222px auto;
  width: 38px;
  height: 35px;
}
.nav-menus .city {
  background-position: 0px bottom;
}
.nav-menus .message {
  background-position: -90px bottom;
}
.nav-menus .intro {
  background-position: -172px bottom;
}
.nav-menus .active .city {
  background-position: 0px -2px;
}
.nav-menus .active .message {
  background-position: -90px -2px;
}
.nav-menus .active .intro {
  background-position: -172px -2px;
}
.index {
  width: 320px;
  margin: 0px auto 109px;
}
.index .band-title1,
.index .band-title2 {
  padding: 0px;
  width: 94%;
  margin: 60px auto 9px;
  height: 15px;
  background-image: url("<%= asset_path 'assets/index-band-title.png' %>");
  background-size: 97px auto;
  background-position: right top;
  background-repeat: no-repeat;
}
.index .band-title2 {
  background-position: right bottom;
  height: 30px;
  margin: 44px auto 11px;
}
.index .arrow-left,
.index .arrow-right {
  position: absolute;
  top: 40px;
  width: 30px;
  height: 32px;
  background-image: url("<%= asset_path 'assets/index-band-arrow.png' %>");
  background-repeat: no-repeat;
  background-size: 300px auto;
}
.index .arrow-left {
  position: absolute;
  left: 10px;
  background-position: left top;
}
.index .arrow-right {
  position: absolute;
  right: 10px;
  background-position: right top;
}
.index .city-list-container {
  margin-left: 42px;
  width: 238px;
  height: 112px;
  overflow: hidden;
}
.index .city-list {
  width: 1000px;
  -webkit-transition: all 0.5s ease-in-out;
  -moz-transition: all 0.5s ease-in-out;
  -o-transition: all 0.5s ease-in-out;
  transition: all 0.5s ease-in-out;
}
.index .city-list li {
  float: left;
  width: 238px;
  height: 112px;
  font-size: 0px;
  line-height: 0px;
}
.index .city-list li img {
  width: 100%;
}
.map {
  width: 320px;
  margin: 0px auto;
  overflow: hidden;
}
.map .arrow-left,
.map .arrow-right {
  position: absolute;
  top: 286px;
  width: 36px;
  height: 36px;
  background-image: url("<%= asset_path 'assets/map-arrow.png' %>");
  background-repeat: no-repeat;
  background-size: 300px auto;
}
.map .arrow-left {
  position: absolute;
  left: 10px;
  background-position: left top;
  z-index: 5000;
}
.map .arrow-right {
  position: absolute;
  right: 10px;
  background-position: right top;
  z-index: 5002;
}
.map .world-map {
  width: 921px;
  height: 569px;
  background-image: url("<%= asset_path 'assets/maps.png' %>");
  background-position: left top;
  background-repeat: no-repeat;
  background-size: 921px auto;
  z-index: 100;
  -webkit-transition: all 0.5s ease-in-out;
  -moz-transition: all 0.5s ease-in-out;
  -o-transition: all 0.5s ease-in-out;
  transition: all 0.5s ease-in-out;
}
.message-detail img {
  width: 100%;
}
