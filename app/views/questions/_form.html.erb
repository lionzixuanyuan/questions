<%= form_for(@question, :html => {:id => "form1", :name => "form1"}) do |f| %>
  <div class="mb_pop_box form-band">
    <div id="step2_info">
      <input type="hidden" id="a1" name="a1" value="" />
      <p>我的问题: </p>
      <div class="clear"></div>
      <%= f.text_area :question, :id => "tableshow", :maxlength => "60", :placeholder => "请填写您要提问的内容" %>
    </div>
    <a href="<%= root_path %>"><div class="step_change" style="margin-left:28px;">上一步</div></a>
    <div class="step_change" id="go-next-step">下一步</div>
  </div>
        
  <div class="question form-band hide">
    <p class="p-city">
      <label>城市</label>
      <%= f.text_field :address, :id => "address", :maxlength => "20" %>
    </p>
    
    <p class="p-university">
      <label>大学</label>
      <%= f.text_field :college, :id => "university", :maxlength => "30" %>
    </p>
    
    <p class="p-user">
      <%= f.text_field :name, :id => "name", :maxlength => "20" %>
      <label>收</label>
    </p>
    
    
    <p class="p-email p-contact">
      <label>邮箱</label>
      <%= f.text_field :e_mail, :id => "email", :maxlength => "50" %>
    </p>
    
    <p class="p-cellphone p-contact">
      <label>手机号</label>
      <%= f.text_field :phone, :id => "mobile", :maxlength => "11" %>
    </p>
    
    <p class="p-vcode p-contact">
      <label>验证码</label>
      <input type="text" name="valid_num" id="vcode" maxlength="8" class="input-short" />
      <button id="send-vcode" class="vcode-btn">发送验证码</button>
    </p>
    <%= f.hidden_field :city %>
    <div class="send_mail" onclick="$('#form1').submit()">提交</div>
  </div>
<% end %>
